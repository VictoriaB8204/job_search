{% extends 'account/base_for_account.html.twig' %}

{% block title %}Мои организации{% endblock %}

{% block content %}
    <h2>Мои организации</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for organization in organizations %}
            <tr>
                <td>{{ organization.name }}</td>
                <td>
                    <a href="{{ path('organization_edit', {'id': organization.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">У вас нет организаций</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('organization_new') }}">Создать</a>
{% endblock %}
