{% extends 'account/base_for_account.html.twig' %}

{% block title %}Семейное положение{% endblock %}

{% block content %}
    <h2>Семейное положение</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for family_status in family_statuses %}
            <tr>
                <td>{{ family_status.name }}</td>
                <td>
                    <a href="{{ path('family_status_show', {'id': family_status.id}) }}">Открыть</a>
                    <a href="{{ path('family_status_edit', {'id': family_status.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет семейных положений</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('family_status_new') }}">Создать</a>
{% endblock %}
