{% extends 'base.html.twig' %}

{% block title %}FamilyStatus index{% endblock %}

{% block body %}
    <h1>FamilyStatus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for family_status in family_statuses %}
            <tr>
                <td>{{ family_status.id }}</td>
                <td>{{ family_status.name }}</td>
                <td>
                    <a href="{{ path('family_status_show', {'id': family_status.id}) }}">show</a>
