{% extends 'account/base_for_account.html.twig' %}

{% block title %}Виды деятельности{% endblock %}

{% block content %}
    <h2>Виды деятельности</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Название вида деятельности</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for employment_type in employment_types %}
            <tr>
                <td>{{ employment_type.name }}</td>
                <td>
                    <a href="{{ path('employment_type_show', {'id': employment_type.id}) }}">Открыть</a>
                    <a href="{{ path('employment_type_edit', {'id': employment_type.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет видов деятельности</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('employment_type_new') }}">Создать</a>
{% endblock %}
