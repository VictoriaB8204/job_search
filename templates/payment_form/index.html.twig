{% extends 'account/base_for_account.html.twig' %}

{% block title %}Формы оплаты труда{% endblock %}

{% block content %}
    <h2>Формы оплаты труда</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for payment_form in payment_forms %}
            <tr>
                <td>{{ payment_form.name }}</td>
                <td>
                    <a href="{{ path('payment_form_show', {'id': payment_form.id}) }}">Открыть</a>
                    <a href="{{ path('payment_form_edit', {'id': payment_form.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('payment_form_new') }}">Создать</a>
{% endblock %}
