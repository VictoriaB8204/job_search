{% extends 'account/base_for_account.html.twig' %}

{% block title %}Мои организации{% endblock %}

{% block content %}
    <h2>Должности</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>
                <td>{{ position.name }}</td>
                <td>
                    <a href="{{ path('position_show', {'id': position.id}) }}">Открыть</a>
                    <a href="{{ path('position_edit', {'id': position.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет должностей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('position_new') }}">Создать</a>
{% endblock %}
