{% extends 'account/base_for_account.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block content %}
<div class="mycontainer" style=" min-width: 16rem; max-width: 30rem;  margin-right: auto;  margin-left: auto;"
     xmlns="http://www.w3.org/1999/html">

    <h2>Регистрация администратора</h2>

{{ form_start(form) }}
    {{ form_row(form.username , {'row_attr':{'class':'form-group'}, 'attr' : {'class': 'form-control' }}) }}
    {{ form_row(form.email , {'row_attr':{'class':'form-group'}, 'attr' : {'class': 'form-control' }}) }}
    {{ form_row(form.plainPassword.first , {'row_attr':{'class':'form-group'}, 'attr' : {'class': 'form-control' }}) }}
    {{ form_row(form.plainPassword.second , {'row_attr':{'class':'form-group'}, 'attr' : {'class': 'form-control' }}) }}

<button type="submit" class="btn btn-info">Зарегистрировать</button>
{{ form_end(form) }}
{% endblock %}