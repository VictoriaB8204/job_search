{% extends 'account/base_for_account.html.twig' %}

{% block title %}Мои резюме{% endblock %}

{% block content %}
    <h2>Мои резюме</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Должность</th>
                <th>Статус резюме</th>
                <th>Статус модерации</th>
                <th>Опыт работы</th>
                <th>Образование</th>
                <th>Зарплата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for resume in resumes %}
            <tr>
                <td>{{ resume.getPositionId }}</td>
                <td>{{ resume.status }}</td>
                <td>{{ resume.moderationStatus }}</td>
                <td>{{ resume.workExperience }}</td>
                <td>{{ resume.education }}</td>
                <td>{{ resume.salary }}</td>
                <td>
                    <a href="{{ path('resume_show', {'id': resume.id}) }}">Открыть</a>
                    <a href="{{ path('resume_edit', {'id': resume.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">У вас нет резюме</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resume_new') }}">Создать</a>
{% endblock %}
