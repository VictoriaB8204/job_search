{% extends 'account/base_for_account.html.twig' %}

{% block title %}Модерация резюме{% endblock %}

{% block content %}
    <h2>Резюме: {{ resume.getPositionId }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Статус резюме</th>
                <td>{{ resume.status }}</td>
            </tr>
            <tr>
                <th>Статус модерации</th>
                <td>{{ resume.moderationStatus }}</td>
            </tr>
            <tr>
                <th>Опыт работы</th>
                <td>{{ resume.workExperience }}</td>
            </tr>
            <tr>
                <th>Образование</th>
                <td>{{ resume.education }}</td>
            </tr>
            <tr>
                <th>Зарплата</th>
                <td>{{ resume.salary }}</td>
            </tr>
            <tr>
                <th>Личные качества</th>
                <td>{{ resume.personalQuality }}</td>
            </tr>
            <tr>
                <th>Дополнительно</th>
                <td>{{ resume.info }}</td>
            </tr>
        </tbody>
    </table>

{{ form_start(form) }}
    {{ form_row(form.moderation_status , {'row_attr':{'class':'form-group'}, 'attr' : {'class': 'form-control' }, 'label' : "Статус модерации"}) }}
    {{ form_row(form.refuse_reason , {'row_attr':{'class':'form-group'}, 'attr' : {'class': 'form-control' }, 'label' : "Причина отказа в публикации"}) }}

    <button class="btn">{{ button_label|default('Сохранить') }}</button>
{{ form_end(form) }}
{% endblock %}
