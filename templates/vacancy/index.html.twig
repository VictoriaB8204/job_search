{% extends 'account/base_for_account.html.twig' %}

{% block title %}Мои вакансии{% endblock %}

{% block content %}
    <h2>Мои вакансии</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Организация</th>
                <th>Должность</th>
                <th>Статус вакансии</th>
                <th>Статус модерации</th>
                <th>Опыт работы</th>
                <th>Зарплата</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for vacancy in vacancies %}
            <tr>
                <td>{{ vacancy.getOrganizationId }}</td>
                <td>{{ vacancy.getPositionId }}</td>
                <td>{{ vacancy.status }}</td>
                <td>{{ vacancy.moderationStatus }}</td>
                <td>{{ vacancy.workExperience }}</td>
                <td>{{ vacancy.salary }}</td>
                <td>
                    <a href="{{ path('vacancy_show', {'id': vacancy.id}) }}">Открыть</a>
                    <a href="{{ path('vacancy_edit', {'id': vacancy.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">У вас нет вакансий</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vacancy_new') }}">Создать</a>
{% endblock %}
